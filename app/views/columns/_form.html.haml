= simple_form_for :column, method: @column ? "patch" : "post", url: @column ? [@profile, @database, @table, @column] : [@profile, @database, @table, :columns] do |f|
  = f.input :name, label: t(".name")
  = f.input :type, label: t(".type"), collection: column_types_collection
  = f.input :default, label: t(".default"), required: false
  = f.input :autoincr, label: t(".auto_increment"), as: :boolean, input_html: {checked: @column.try(:autoincr?)}
  = f.input :primarykey, label: t(".primary_key"), as: :boolean, input_html: {checked: @column.try(:primarykey?)}
  = f.button :submit
