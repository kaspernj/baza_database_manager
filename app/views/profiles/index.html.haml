- content_for(:header_title) { Profile.model_name.human(count: 2) }

= link_to t("add_new"), [:new, :profile], class: ["btn", "btn-default"]

%table.table.table-bordered.table-striped.table-hover
  %thead
    %tr
      %th= Profile.human_attribute_name(:name)
      %th= t("actions")
  %tbody
    - @profiles.each do |profile|
      %tr
        %td= link_to profile.name, profile
        %td
          = link_to t("edit"), edit_profile_path(profile), class: ["btn", "btn-default", "btn-xs"] if can? :edit, profile
          = link_to t("delete"), profile_path(profile), method: :delete, class: ["btn", "btn-danger", "btn-xs", "delete-profile-#{profile.id}"], data: {confirm: t("are_you_sure")} if can? :destroy, profile
    - if @profiles.empty?
      %tr
        %td{colspan: 2}= t("no_results")

= will_paginate @profiles
