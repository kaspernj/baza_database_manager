
- content_for(:header_title) { t(".show_index", name: @index.name) }
- content_for(:header_right) do
  = bs_edit_btn url: [:edit, @profile, @database, @table, @index], mini: true
  = bs_destroy_btn url: [@profile, @database, @table, @index], mini: true, class: "delete-index"

= bs_box t("details"), table: true do
  %tbody
    %tr
      %th= t(".database")
      %td= link_to @database.name, [@profile, @database]
    %tr
      %th= t(".table")
      %td= link_to @table.name, [@profile, @database, @table]

    - @index.data.each do |key, value|
      - next if key == :columns
      %tr
        %th= key
        %td= value

    %tr
      %th= t(".columns")
      %td
        - @index.columns.each do |column|
          = link_to column, [@profile, @database, @table, :column, id: column]
